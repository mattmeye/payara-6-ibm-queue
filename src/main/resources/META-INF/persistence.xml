<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="mqPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>

        <class>com.example.ibmmq.entity.MQMessage</class>

        <exclude-unlisted-classes>true</exclude-unlisted-classes>

        <properties>
            <!-- Database connection properties -->
            <property name="jakarta.persistence.database-product-name" value="PostgreSQL"/>
            <property name="jakarta.persistence.database-major-version" value="16"/>

            <!-- EclipseLink specific properties -->
            <property name="eclipselink.target-database" value="PostgreSQL"/>
            <property name="eclipselink.target-server" value="None"/>

            <!-- DDL generation (for development) -->
            <property name="eclipselink.ddl-generation" value="create-or-extend-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>

            <!-- Logging -->
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="eclipselink.logging.parameters" value="true"/>

            <!-- Connection pool -->
            <property name="eclipselink.connection-pool.default.initial" value="5"/>
            <property name="eclipselink.connection-pool.default.min" value="5"/>
            <property name="eclipselink.connection-pool.default.max" value="20"/>

            <!-- Performance optimizations -->
            <property name="eclipselink.cache.shared.default" value="false"/>
            <property name="eclipselink.query-results-cache" value="true"/>
            <property name="eclipselink.batch-writing" value="JDBC"/>
        </properties>
    </persistence-unit>
</persistence>